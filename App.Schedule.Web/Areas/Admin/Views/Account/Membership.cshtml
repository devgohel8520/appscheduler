@model App.Schedule.Domains.ViewModel.ResponseViewModel<App.Schedule.Domains.ViewModel.MembershipViewModel>

@{
    ViewBag.Title = "Membership";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}

<ul class="nav nav-tabs">
    <li><a href="@Url.Action("index","account",new { area = "admin"})">Account Profile</a></li>
    <li><a href="@Url.Action("administrator","account",new { area = "admin"})">Administrator</a></li>
    <li class="active"><a href="@Url.Action("membership","account",new { area = "admin"})">Membership</a></li>
    <li><a href="@Url.Action("billing","account",new { area = "admin"})">Billing</a></li>
</ul>
<div class="tab-content" style="padding:0px 10px;">
    <div class="tab-pane active">
        <div class="col-lg-12 margin10">
            <div class="row">
                @if (Model != null)
                {
                    if (!Model.Status)
                    {
                        <div id="errorBox" class="alert alert-danger" role="alert">
                            <strong id="err_head">Error: </strong>
                            <span id="err_title">@Model.Message</span>
                        </div>
                    }
                    <table class="table table-striped">
                        <tr>
                            <td class="text-right">Membership Name</td>
                            <td>
                                @Html.EditorFor(d => d.Data.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Membership Name", disabled = "true" } })
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right">About</td>
                            <td>
                                @Html.EditorFor(d => d.Data.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "About", disabled = "true" } })
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right">Benifits</td>
                            <td>
                                @Html.EditorFor(d => d.Data.Benifits, new { htmlAttributes = new { @class = "form-control", @placeholder = "Benifits", disabled = "true" } })
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right">Unlimited Account</td>
                            <td>
                                @Html.CheckBoxFor(d => d.Data.IsUnlimited, new { htmlAttributes = new { @type = "checkbox" } })
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right"></td>
                            <td>
                                <a href="@Url.Action("edit","membership",new { area="admin"})" class="btn btn-success col-lg-4">Edit</a>
                                <a href="@Url.Action("index","accountsetup",new { area="admin"})" class="btn btn-default col-lg-4" style="margin-left:10px;">Back</a>
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
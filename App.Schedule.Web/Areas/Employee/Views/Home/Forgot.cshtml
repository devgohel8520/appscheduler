
@{
    ViewBag.Title = "Employee Forgot Password";
    Layout = "~/Views/Shared/_NotAuthLayout.cshtml";
}

<div class="absolute-center is-center is-forgot">
    <div class="logo-container">Forgot Password</div>
    <div class="col-sm-12 col-md-10 col-md-offset-1">
        <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control", @placeholder = "Email Id" } })
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-def btn-block bga-secondary" onclick="onSubmit(this,'@Url.Action("Index", "Home", new { area = "" })');">Submit</button>
        </div>
        <div class="form-group text-center">
            <a href="@Url.Action("Login","Home", new { area = "Employee" })" class="btn btn-link">Back</a>
        </div>
    </div>
    <div class="bga-footer col-sm-12 col-md-10 col-md-offset-1">
        &copy; @DateTime.Now.Year.ToString() Copyright Ap.
    </div>
</div>


